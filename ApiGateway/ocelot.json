{
    "GlobalConfiguration": {
        "BaseUrl": "http://localhost:5000"
    },
    "Routes": [
        {
            "UpstreamPathTemplate": "/gateway/produtos",
            "UpstreamHttpMethod": [
                "GET"
            ],
            "DownstreamPathTemplate": "/produto/obtertodos",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5001
                }
            ],
            "RateLimitOptions": {
                "EnableRateLimiting": true,
                "Period": "10s",
                "Limit": 3,
                "PeriodTimespan": 10
            }
        },
        {
            "UpstreamPathTemplate": "/gateway/produto/{id}",
            "UpstreamHttpMethod": [
                "GET", "PUT", "DELETE"
            ],
            "DownstreamPathTemplate": "/produto/{id}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5001
                }
            ]
        },
        {
            "UpstreamPathTemplate": "/gateway/buscapornome",
            "UpstreamHttpMethod": [
                "GET"
            ],
            "DownstreamPathTemplate": "/produto/obterpornome",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5001
                }
            ]
        }, 
        {
            "UpstreamPathTemplate": "/gateway/produto",
            "UpstreamHttpMethod": [
                "POST"
            ],
            "DownstreamPathTemplate": "/produto",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5001
                }
            ]
        }
    ]
}